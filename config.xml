<?xml version='1.0' encoding='utf-8'?>
<widget
   id="com.amirsher.www"
   version="0.0.4"   
   xmlns="http://www.w3.org/ns/widgets"
   xmlns:gap="http://phonegap.com/ns/1.0">

<name>BT Garage Door Control</name>
<description> Garage Door Control using BT </description>
<author email="amirsher@amirsher.com" href="http://www.amirsher.com"> Amir Sher </author>
<content src="index.html" />
<icon src="icon.png" />
<plugin name="cordova-plugin-bluetooth-serial" spec="0.4.7" source="npm" />

<access origin="*" /> 
<allow-intent href="http://*/*" />
<allow-intent href="https://*/*" />
<preference name='phonegap-version' value='cli-7.0.1' />
<preference name='pgb-builder-version' value='2' />

<platform name="android">
   <allow-intent href="market:*" />
   <icon src="icon.png" width="192" height="192" />
</platform>

</widget>
